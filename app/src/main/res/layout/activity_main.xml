<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.juanmendez.stylingrecipes.MainActivity">

    <!--simple enough to change the tint color-->
    <ImageView
        android:src="@drawable/ic_signal_wifi_off_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorAccent" />

    <ImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/ic_directions_bike_black_24dp_svg"
        android:tint="@color/colorAccent"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/ic_directions_bike_black_24dp_svg"
        android:tint="@color/colorAccent"/>
</LinearLayout>
